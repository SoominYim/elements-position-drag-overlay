{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "ES2022"]
  },
  "include": ["src/app/**/*.ts", "src/background.ts", "src/shared/**/*.ts", "src/demo/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
